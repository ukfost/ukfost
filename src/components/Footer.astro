<style>
  footer {
    background-color: var(--dark-purple);
    color: white;
    padding: 20px;
    margin-top: 20px;
    margin-top: auto;
  }
  #grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 8px;
    justify-items: center;
  }
  @media (min-width: 800px) {
    #grid {
      grid-template-columns: 1fr 1fr;
      grid-template-areas:
        "a a"
        "b b"
        "c d";
    }
    #grid > *:nth-child(1) {
      grid-area: a;
    }
    #grid > *:nth-child(2) {
      grid-area: b;
    }
    #grid > *:nth-child(3) {
      width: 100%;
      text-align: right;
      grid-area: c;
    }
    #grid > *:nth-child(4) {
      width: 100%;
      text-align: left;
      grid-area: d;
    }
  }
</style>

