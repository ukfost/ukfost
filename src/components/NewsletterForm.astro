  <div id=fields>
    <input name="email" type="email" placeholder="Email" />
    <input type="submit" />
  <div>
</form>

<script>
  document.getElementById("newsletter").onsubmit = (e) => {
    e.preventDefault();
    const email = e.target.email.value;
    e.target.email.value = "";

    return false;
  }
</script>