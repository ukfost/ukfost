---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="prefetch" href="/banner.jpg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style>
  html {
    --purple: #8f288c;
    --dark-purple: rgb(72,20,70);
    --orange: rgb(238, 129, 0);
    --max-w: 1200px;
    line-height: 1.4;
    background: var(--dark-purple);
    font-family: system-ui, sans-serif;
  }

  :global(input), :global(button), :global([data-button]) {
    font-size: 16px;
    border-radius: 4px;
  }

  :global(input[type=email]) {
    padding: 8px;
    border: none;
  }

  :global(button), :global(input[type=submit]), :global([data-button])  {
    padding-block: 4px;
    padding-inline: 8px;
    display: block;
    background: var(--dark-purple);
    color: white;
    appearance: none;
    border: none;
    font-weight: bold;
    cursor: pointer;
  }

  :global([data-button]) {
    background: var(--orange);
    text-decoration: none;
  }

  body {
    margin: 0;
    min-height: 100vh;
    position: relative;
    background: white;
  }

  :global(a) {
    color: inherit;
  }
</style>
